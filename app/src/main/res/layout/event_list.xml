<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="25 FEBRUARY 2019"
                    android:fontFamily="@font/arabtype"
                    android:textAlignment="center"/>
                <View
                    android:id="@+id/view"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/nametv"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_below="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    >
                    <View
                        android:id="@+id/view2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/relative"
                        android:layout_width="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
             <TextView
                 android:id="@+id/registrationtv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:layout_marginTop="8dp"
                 android:layout_marginStart="8dp"
                 android:textSize="16dp"
                 android:textStyle="bold"
                 android:text="REGISTRATION"/>
                    <ImageView
                        android:id="@+id/cal1"
                        android:layout_below="@+id/registrationtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/black"
                      android:background="@drawable/calender1"/>
                    <TextView
                        android:id="@+id/registration_date"
                        android:layout_below="@+id/registrationtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/cal1"
                        android:layout_toLeftOf="@+id/view2"
                        android:layout_marginStart="15dp"
                        android:textSize="16dp"
                        android:text="EVENT"/>
                    <TextView
                        android:id="@+id/eventv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                       android:layout_toRightOf="@+id/view2"
                        android:layout_marginStart="15dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="EVENT"/>
                    <ImageView
                        android:id="@+id/cal2"
                        android:layout_below="@+id/eventv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/view2"
                        android:layout_marginStart="15dp"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/calender1"/>
                    <TextView
                        android:id="@+id/event_date"
                        android:layout_below="@+id/registrationtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="15dp"
                        android:layout_toRightOf="@+id/cal2"
                        android:textSize="16dp"

                        android:text="EVENT"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/view3"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@+id/relative"
                        android:layout_width="wrap_content"
                        android:background="@color/colorPrimary"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:textSize="16dp"

                        android:text="Description"/>
                    <TextView
                        android:id="@+id/fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_below="@+id/description"
                        android:textSize="16dp"

                        android:text="FEES : "/>
                    <ImageView
                        android:id="@+id/ruppe"
                        android:layout_height="16dp"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_below="@+id/description"
                        android:layout_toRightOf="@+id/fees"
                        android:src="@drawable/rupee"/>
                    <TextView
                        android:id="@+id/feestv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkred"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="3dp"
                        android:layout_toRightOf="@+id/ruppe"
                        android:layout_below="@+id/description"
                        android:layout_toLeftOf="@+id/checkBox"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:text="FEES"/>
                    <CheckBox
                        android:layout_marginEnd="8dp"
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgreen"
                        android:text="PARTICIPATE"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/description"/>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>