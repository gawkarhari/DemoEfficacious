<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/lineardailydiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/Name_relLeave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:visibility="gone"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageteacher"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/profile"
                    android:paddingStart="5dp"
                    app:civ_border_width="0.5dp"  />
                <TextView
                    android:id="@+id/Name_Leave"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageteacher"
                    android:layout_alignBottom="@+id/imageteacher"
                    android:layout_marginStart="10dp"
                    android:text="textview"
                    android:textColor="@color/black" />
                <ImageButton
                    android:id="@+id/editbutton"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/edit"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fromdate_Leave"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="textview"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/ToDate_Leave"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="textview1"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Days_Leave"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="textview"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/Approval_Leave"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/Days_Leave"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="textview1 "
                    android:textColor="@color/red" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/inserted_daterelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/Days_"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="textview"
                    android:layout_weight="0"
                    android:textColor="@color/black" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/attachmntrelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/downloadimg"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/profile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:id="@+id/dwnloagIamge1"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"

                    android:background="@mipmap/dwnload"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/downloadimg2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/profile"
                    android:layout_marginStart="12dp" />
                <ImageView
                    android:id="@+id/dwnloagIamge2"
                    android:layout_width="18dp"
                    android:layout_height="25dp"

                    android:layout_gravity="bottom"
                    android:background="@mipmap/dwnload"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/downloadimg3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@mipmap/profile"
                    android:layout_marginStart="12dp"
                    />
                <ImageView
                    android:id="@+id/dwnloagIamge3"
                    android:layout_width="18dp"

                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/dwnload"/>
                <!--<ImageView-->
                <!--android:id="@+id/downloadimg"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:background="@drawable/dwnloadbtn" />-->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Reason_Leave"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="textview"
                    android:textColor="@color/black" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/approve_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approve "
                    android:visibility="gone"
                    android:id="@+id/approval_checkbx"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved "
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:textColor="@color/green"
                    android:id="@+id/Approvedtv"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reject "
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/reject_checkbx1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected "
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red"
                    android:id="@+id/rejecttv"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>