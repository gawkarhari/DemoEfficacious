<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/relativebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
<TextView
    android:id="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:text="Description"
    android:gravity="center"
    android:textSize="20dp"
    />
<TextView
    android:id="@+id/accessionnotv"
    android:layout_marginTop="15dp"
    android:layout_below="@+id/heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:text="Accession No.  :"
    style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/accessionno"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/accessionnotv"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Accession No."
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>

        <TextView
            android:id="@+id/booknametv"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/accessionno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Book Name       :"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/bookname"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/booknametv"
            android:layout_below="@+id/accessionno"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="bookname"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/authornametv"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Author Name    :"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/authorname"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/authornametv"
            android:layout_below="@+id/bookname"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Author Name"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/editionnametv"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Edition               :"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/editionname"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/editionnametv"
            android:layout_below="@+id/authorname"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Edition"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/langtv"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editionname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Language          :"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/lang"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/langtv"
            android:layout_below="@+id/editionname"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Language"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
        <TextView
            android:id="@+id/bookPricetv"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Price                  :"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
            <ImageView
                android:layout_marginTop="19dp"
                android:id="@+id/ruppe_menu"
                android:layout_height="16dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/bookPricetv"
                android:layout_below="@+id/lang"
                android:src="@drawable/rupee"/>
        <TextView
            android:id="@+id/bookPrice"
            android:layout_toEndOf="@+id/ruppe_menu"
            android:layout_below="@+id/lang"
            android:layout_marginTop="15dp"
            android:layout_marginStart="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Price"
            style="@android:style/TextAppearance.DeviceDefault.Medium"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>