<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/background">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dip">
            <RelativeLayout
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:id="@+id/std_relative"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <!--<ListView-->
                <!--android:id="@+id/dailydiary_listview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <!--</ListView>-->
                <TextView
                    android:id="@+id/stdtv"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="Standard "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/std_spinner"
                    android:layout_toEndOf="@+id/stdtv"
                    android:padding="10dp"
                    android:layout_alignBaseline="@+id/stdtv"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:paddingTop="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/div_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="horizontal" >
                <!--<ListView-->
                <!--android:id="@+id/dailydiary_listview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <!--</ListView>-->
                <TextView
                    android:id="@+id/divtv"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="Division    "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/div_spinner"
                    android:layout_toEndOf="@+id/divtv"
                    android:padding="10dp"
                    android:layout_alignBaseline="@+id/divtv"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:id="@+id/sub_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="horizontal" >
                <!--<ListView-->
                <!--android:id="@+id/dailydiary_listview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->
                <!--</ListView>-->
                <TextView
                    android:id="@+id/subtv"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="Exam     "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/sub_spinner"
                    android:layout_toEndOf="@+id/subtv"
                    android:padding="10dp"
                    android:layout_alignBaseline="@+id/subtv"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/dat_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dattv"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="Attachement  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/attachemnttv"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_toEndOf="@+id/dattv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/attachemnttv2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_below="@+id/attachemnttv"
                    android:layout_alignStart ="@+id/attachemnttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/attachemnttv3"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_below="@+id/attachemnttv2"
                    android:layout_alignStart ="@+id/attachemnttv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/remarktv"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext_black_bg"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:gravity="top|left"
                    android:hint="Write Remark here"
                    android:inputType="textMultiLine"/>
                <ImageView
                    android:id="@+id/calenderbtn1"
                    android:background="@color/trans"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_margin="18dp"
                    android:layout_alignBottom="@+id/remarktv"
                    android:layout_alignEnd="@id/remarktv"
                    android:src="@mipmap/attachment"
                    android:layout_height="wrap_content"
                    tools:ignore="contentDescription" />
                <ImageView
                    android:id="@+id/calenderbtn2"
                    android:background="@color/trans"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignBottom="@+id/remarktv"
                    android:layout_alignEnd="@id/calenderbtn1"
                    android:src="@mipmap/attachment"
                    android:layout_height="wrap_content"
                    tools:ignore="contentDescription" />
                <ImageView
                    android:id="@+id/calenderbtn3"
                    android:background="@color/trans"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignBottom="@+id/remarktv"
                    android:layout_alignEnd="@id/calenderbtn2"
                    android:src="@mipmap/attachment"
                    android:layout_height="wrap_content"
                    tools:ignore="contentDescription" />
                <LinearLayout
                    android:id="@+id/middle_linear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/remarktv">

                    <Button
                        android:id="@+id/btnSubmit"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                    <!--android:layout_gravity="center_horizontal"-->


                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>