<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="6dip"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/Rel_main1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rel_main">
            <LinearLayout
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >
                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edtUserName_studentchangepassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/edittext_style"
                    android:hint="User Name"
                    android:inputType="text"
                    android:padding="10px"
                    android:editable="false"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    tools:hint="New User Name" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rel_main2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rel_main1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:contentDescription="@null"
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                     />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/edtPassword_studentchangepassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10px"
                    android:layout_margin="4dp"
                    android:hint="Password"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:background="@drawable/edittext_style"
                    android:singleLine="true"
                    tools:hint="New Password" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Rel_main3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rel_main2">
            <LinearLayout
                android:id="@+id/middle_linear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnUpdate_studentchangepassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="Update"
                    android:textColor="@color/white"
                    android:background="@drawable/button_style"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnCancel_studentchangepassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="30dp"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_weight="1"
                    android:paddingRight="30dp"
                    android:text="Clear"
                    android:textColor="@color/white"
                    android:background="@drawable/button_style"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>