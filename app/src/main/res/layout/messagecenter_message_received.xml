<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/trans">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_message_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:background="@color/trans"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded"
    android:layout_marginTop="5dp">

    <TextView

        android:id="@+id/item_message_body_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/simple_padding_tiny"
        android:layout_marginLeft="@dimen/simple_padding_medium"
        android:layout_marginRight="@dimen/simple_padding_huge"
        android:layout_marginTop="@dimen/simple_padding_tiny"
        android:background="@drawable/message_received_chip"
        android:clickable="true"
        android:longClickable="true"
        android:padding="@dimen/simple_padding_medium"
        android:paddingEnd="@dimen/simple_padding_large"
        android:paddingStart="@dimen/simple_padding_large"
        android:text="@string/placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_secondary" >
    </TextView>
<TextView
    android:id="@+id/dateleft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="13dp"
    android:paddingLeft="7dp"
    android:text="Date"
    android:visibility="gone"
    android:gravity="left"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/item_message_parent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/trans"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/item_message_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simple_padding_small"
            android:layout_marginTop="@dimen/simple_padding_large"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/placeholder"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_message_body_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/simple_padding_tiny"
            android:layout_marginLeft="@dimen/simple_padding_huge"
            android:layout_marginRight="@dimen/simple_padding_medium"
            android:layout_marginTop="@dimen/simple_padding_tiny"
            android:background="@drawable/message_sent_chip"
            android:clickable="true"
            android:longClickable="true"
            android:padding="@dimen/simple_padding_medium"
            android:paddingEnd="@dimen/simple_padding_large"
            android:paddingStart="@dimen/simple_padding_large"
            android:text="@string/placeholder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_secondary" />
        <TextView
            android:id="@+id/dateright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:gravity="right"
            android:paddingRight="7dp"
            android:text="Date"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>