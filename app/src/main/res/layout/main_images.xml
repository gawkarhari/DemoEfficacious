<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MultiImages.activities.MainImages">

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"

        />
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/img1"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/img2"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img1"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img5"
        android:layout_toEndOf="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img2"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img6"
        android:layout_toEndOf="@+id/img5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img3"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img4"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img8"
        android:layout_toEndOf="@+id/img7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img5"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/img8"
        android:layout_below="@+id/img6"/>
    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/img10"
        android:layout_toEndOf="@+id/img7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/img7"/>
    <LinearLayout
        android:id="@+id/middle_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/img10">

        <Button
            android:id="@+id/btnSubmit"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_select"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Select Images"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>