<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/imageRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:src="@mipmap/profile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="160dp"
           android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewedit"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:src="@drawable/edit" />

        </RelativeLayout>
    </RelativeLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
           android:layout_below="@+id/imageRelative"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="NAME"
                    android:fontFamily="@font/arabtype"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/StdName"
                    android:layout_below="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Std(div)"
                    android:textAlignment="center"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/IdNo"
                    android:layout_below="@+id/StdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="IdNo"
                    android:textAlignment="center"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/MobileNotv"
                    android:layout_below="@+id/IdNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mobile No"
                    android:textAlignment="center"
                    android:textSize="16dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginBottom="24dp"
            android:layout_below="@+id/cardview"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout

                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/father"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Father's Name"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="textStart"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/Mothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Mother's Name"
                    android:layout_marginRight="8dp"
                    android:textAlignment="textEnd"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:id="@+id/fatherName"
                    android:layout_below="@+id/father"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Father Name"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="textStart"
                    android:textSize="16dp" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:id="@+id/MotherName"
                    android:layout_below="@+id/Mothers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mother Name"
                    android:layout_marginRight="8dp"
                    android:textAlignment="textEnd"
                    android:textSize="16dp" />
                </LinearLayout>
                <View
                    android:layout_below="@+id/linear2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/relative"
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                >
                <View
                    android:id="@+id/view2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="1dp"
                    android:background="@color/colorPrimary"
                  android:layout_toRightOf="@+id/addrssimage"
                    android:layout_marginStart="25dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/addrssimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/address"/>
                <TextView
                    android:id="@+id/addresstv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_marginStart="15dp"
                    android:textSize="16dp"
                    android:text="Address"/>
            </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
</ScrollView>