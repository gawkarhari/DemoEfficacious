<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/relativeLayout"
        android:id="@+id/teacherattb_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"

        android:layout_marginBottom="8dp"
        />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/lightcolor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/PeriodTime_studenttimetable"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:gravity="left|center_vertical"
            android:text="Time"
            android:paddingLeft="5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/Subject_studenttimetable"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:layout_toRightOf="@+id/PeriodTime_studenttimetable"
            android:gravity="left|center_vertical"
            android:text="Subject"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/Teacher_studenttimetable"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/Subject_studenttimetable"
            android:layout_weight="0.5"
            android:gravity="center|center_vertical"
            android:text="Class"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>
</android.support.constraint.ConstraintLayout>