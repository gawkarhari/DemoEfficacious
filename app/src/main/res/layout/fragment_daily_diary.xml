<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/std_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_spinner"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/div_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_spinner"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sub_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_spinner"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/date_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/datetv"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:padding="5dp"
                    android:text="Date          "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/datetextvw"
                    android:layout_toEndOf="@+id/datetv"
                    android:padding="5dp"
                    android:text="date"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_alignBaseline="@+id/datetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/calenderbtn"
                    android:layout_width="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp"
                    android:layout_toEndOf="@+id/datetextvw"
                    android:background="@drawable/calender1" />
            </RelativeLayout>

                <LinearLayout
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_attachment1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/profile"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_attachment2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/profile"
                        android:layout_marginStart="12dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_attachment3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/profile"
                        android:layout_marginStart="12dp"
                        />
                </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp">
                <EditText
                    android:id="@+id/remarktv"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:ems="10"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:gravity="top|left"
                    android:hint="Write Remark here"
                    android:inputType="textMultiLine"/>
                <ImageView
                    android:id="@+id/attachmentbtn"
                    android:background="@color/trans"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_margin="18dp"
                    android:layout_alignBottom="@+id/remarktv"
                    android:layout_alignEnd="@id/remarktv"
                    android:src="@mipmap/attachment"
                    android:layout_height="wrap_content"
                    tools:ignore="contentDescription" />


                <LinearLayout
                    android:id="@+id/middle_linear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/remarktv">

                    <Button
                        android:id="@+id/btnSubmit"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_style"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                    <!--android:layout_gravity="center_horizontal"-->


                </LinearLayout>
            </RelativeLayout>
            <!--<ProgressBar-->
            <!--android:id="@+id/ProgressBar_dailydiary"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="invisible"-->
            <!--android:layout_centerHorizontal="true"/>-->
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />
        </LinearLayout>


</ScrollView>