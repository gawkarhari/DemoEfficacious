<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            android:background="@color/white"

            card_view:cardUseCompatPadding="true"
            >
          <RelativeLayout
             android:layout_marginBottom="10dp"
              android:layout_marginTop="2dp"
              android:layout_marginStart="4dp"
              android:layout_marginEnd="4dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            >
              <RelativeLayout
                  android:id="@+id/relativ"
                  android:background="@drawable/date_bg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center">
              <RelativeLayout
                  android:id="@+id/relativedate"
                  android:layout_marginTop="5dp"
                android:gravity="center"
                  android:layout_width="95dp"
                  android:layout_height="wrap_content"
                 >
                  <TextView
                      android:gravity="center"
                      android:id="@+id/datetv"
                      style="@android:style/TextAppearance.DeviceDefault.Medium"
                      android:padding="8dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Date"
                      android:textColor="@color/white"
                      android:textStyle="bold"/>
              </RelativeLayout>
                  <RelativeLayout
                      android:layout_marginBottom="2dp"
                      android:layout_marginLeft="2dp"
                      android:layout_marginRight="2dp"
                     android:paddingTop="5dp"
                      android:paddingBottom="1dp"
                      android:paddingStart="1dp"
                      android:paddingEnd="1dp"
                      android:background="@drawable/shadow_tile"
                      android:layout_below="@+id/relativedate"
                      android:layout_width="95dp"
                      android:layout_height="wrap_content">
                      <TextView
                          android:id="@+id/monthtv"
                          style="@android:style/TextAppearance.DeviceDefault.Small"
                          android:padding="6dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Date"
                         />
                      <TextView
                          android:id="@+id/yeartv"
                          android:layout_toEndOf="@+id/monthtv"
                          style="@android:style/TextAppearance.DeviceDefault.Small"
                          android:padding="6dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="year"
                         />
                  </RelativeLayout>
              </RelativeLayout>
              <RelativeLayout
                  android:layout_toEndOf="@+id/relativ"
                  android:layout_margin="5dp"
                  android:layout_weight="1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingStart="5dp">
                  <TextView
                      android:id="@+id/subjecttv"
                      style="@android:style/TextAppearance.DeviceDefault.Medium"
                      android:padding="6dp"
                      android:textColor="@color/black"
                      android:textStyle="bold"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="SubjectName"/>
                  <TextView
                      android:textColor="@color/black"
                      android:id="@+id/timetv"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="6dp"
                      android:layout_below="@+id/subjecttv"
                      style="@android:style/TextAppearance.DeviceDefault.Medium"
                      android:padding="6dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Time"/>
              </RelativeLayout>
          </RelativeLayout>
        </android.support.v7.widget.CardView>

